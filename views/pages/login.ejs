<%
    if (typeof error === 'undefined') {
        error = '';
    }
%>

<div class="container">
    <div class="columns is-centered">
        <div class="column is-half">
            <h1 class="title">Login</h1>
            <div class="content">
                <form method="POST">
                    <div class="field">
                        <div class="control">
                            <input class="input" type="text" name="username" placeholder="Username" />
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button">Login</button>
                        </div>
                    </div>
                </form>
            </div>
            <p>Don't have an account? <a href="/create-user">Click here</a> to make one.</p>
        </div>
    </div>
</div>